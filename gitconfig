[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color "grep"]
  context = white bold
  function = green bold
  linenumber = white bold
  match = red bold
  selected = magenta bold
  separator = white

[color]
  ui = true

[core]
  editor=vim

[alias]
  a          = add
  brt        = "!source ~/.githelpers && git_branch_by_time"
  ci         = commit -v
  co         = checkout
  l          = "!source ~/.githelpers && pretty_git_log"
  lol        = log --decorate --graph --abbrev-commit --oneline
  s          = status --short
  updatesubm = submodule foreach git pull origin master
  gre        = grep -C 2 -p --line-number

  # I ocasionally lol when using those, bringing some light in my empty existance
  omgwtf     = blame
  iddqd      = rebase -i
  govnokod   = "!source ~/.githelpers && govnokod"

