  email = nikolay@vladimiroff.com

[github]
  user = nvloff

[push]
  default = tracking

[branch]
  autosetuprebase = always

[help]
  autocorrect = 1

[merge]
  tool = vimdiff

[init]
	templatedir = ~/.git_template
