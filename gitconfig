[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color]
  ui = true

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor=vim

[alias]
  ds = diff --staged
  ri = rebase -i
  s = status --short
  ci = commit -v
  br = branch
  co = checkout
  df = diff
  lp = log -p
  l = "!source ~/.githelpers && pretty_git_log"
  lol = log --decorate --graph --abbrev-commit --oneline
  sh = "!source ~/.githelpers && show_git_head"
  los = log --stat
  ls = ls-files
  updatesubm = submodule foreach git pull origin master
  ctags = !.git/hooks/ctags
  track = checkout --track
  brt = "!source ~/.githelpers && git_branch_by_time"

