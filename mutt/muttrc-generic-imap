# IMAP settings
set imap_user = "username" 
set imap_pass = "password"
set folder = "imaps://username@host:993/"

#Mailbox settings
set spoolfile = "+INBOX"
set postponed = "+Drafts"
set record = "+Sent"

#SMTP settings
set smtp_url = "smtp://smtp_host:25/"
set smtp_pass = "password"

# Personal settings
set from = "my@email.address"
set realname = "My Real Name"

# editor settings
set editor = 'vim + -c "set textwidth=72" -c "set wrap" -c "set nocp"'

# caching
set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates

#aliases
set alias_file = ~/.mutt/aliases
set sort_alias = alias
set reverse_alias = yes
source $alias_file

#sorting
set sort = threads
set sort_aux = last-date-received

# number of messages to display when pager is visible
set pager_index_lines = 10

set postpone = ask-no                     # Ask about postponing.
set include                               # Include the message in replies.
set attribution = "On %D, %n wrote :\n"   # Format of replies
set edit_headers                          # I want to edit the message headers.
set copy                                  # Keep copies of outgoing mail...
set fcc_clear                             # Keep fcc's clear of signatues and encryption.
set tilde                                 # Fill out messages with '~'.
set noconfirmappend                       # Just append, don't hassle me.
set pager_stop                            # Don't skip msgs on next page.
set fast_reply                            # do not ask about To: and Subject when replying
unset mark_old                            # do not mark messages as old

# headers
unhdr_order *
hdr_order From: Subject: Date: To: Message-ID: CC: Date: Organization: X-Mailer: User-Agent:

#Colours
#Dark blue theme for black background
#
#Spam
color index magenta default '~h "X-Spam-Status:.*score=(4|5)."'
color index magenta default '~h "X-Spam-Status:.*score=(6|7)."'

# Headers
color hdrdefault red                   default
color header     brightmagenta         default        ^Subject:
color header     brightgreen           default        ^CC:
color header     brightcyan            default        ^From:
color header     brightgreen           default        ^To:

# Messages
color body       cyan            default        ^gpg:.*
color body       red             default        " [;:]-*[)>(<|]"
color quoted     brightblue      default
color signature  cyan            default
color attachment yellow          default
color tilde      blue            default

#Index
color normal     white           default
color indicator  brightwhite     blue
color index      red             default        ~D         # Deleted
color index      red             default        ~N         # New
color error      red             default
color message    brightcyan      default
color status     brightyellow    blue
color tree       magenta         default
color bold       brightyellow    default
color markers    red             default
